
  <% if logged_in? %>

  <%= form_for @post_new do |i| %>
    <%= i.label :title %>
    <%= i.text_field :title %>
    <%= i.label :body %>
    <%= i.text_area :body %>
    <%= i.hidden_field :user_id, :value => current_user.id %>
    <%= i.submit :create %>
  <% end %>

<% end %>

<br>
<% @posts.reverse.each do |post| %>
  <div class="whole-post">
    <div class="title">
      <%= post.title %>
    </div>
      <%= post.id %>  
      <span class='comment-button'><%= link_to 'Comment'%> </span>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Delete Post', post, :method => :delete %>
    <div class="body">
      <%= post.body %>
    </div>
      <% post.comments.each do |comment|%>
        <div class="comment">
          <%= comment.message %>
          <%= link_to 'Delete Comment', comment, :method => :delete %><br>
        </div>
      <% end %>
    ~ <%= post.user.fname %>

    <% if logged_in? %>
      <div class="comment-field">
        <%= form_for ([@post_comment, @comment_new]) do |i| %>
          <%= i.hidden_field :user_id, :value => current_user.id %>
          <%= i.hidden_field :post_id, :value =>  2%>
          <%= i.label :message %>
          <%= i.text_area :message %>
          <%= i.submit :create %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>






