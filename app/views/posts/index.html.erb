This is the home page - where the feed will be.


<%= form_for @post do |i| %>
  <%= i.label :title %>
  <%= i.text_field :title %>
  <%= i.label :body %>
  <%= i.text_area :body %>
  <%= i.hidden_field :user_id, :value => 1 %>
  <%= i.submit :create %>

<% end %>

<br>
<% @posts.each do |post| %>
  <%= post.title %>
  <%= post.body %>
  <%= post.user_id %>
  <% end %>


<%= form_for @comment_new do |i| %>
  <%= i.hidden_field :user_id, :value => 1 %>
  <%= i.hidden_field :post_id, :value => 1 %>
  <%= i.label :message %>
  <%= i.text_area :message %>
  <%= i.submit :create %>

<% end %>  